# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /api-v3/static/*file              controllers.Assets.at(path="/public", file)

# API routes
GET     /api-v3/datasets                         controllers.DatasetController.listAll(prettyPrint: Option[Boolean])
GET     /api-v3/datasets/:id                     controllers.DatasetController.getDataset(id: String, prettyPrint: Option[Boolean])
GET     /api-v3/datasets/:id/items               controllers.DatasetController.listAnnotatedThings(id: String, prettyPrint: Option[Boolean])
GET     /api-v3/datasets/:id/places              controllers.DatasetController.listPlaces(id: String, prettyPrint: Option[Boolean])

GET     /api-v3/items                            controllers.AnnotatedThingController.listAll(prettyPrint: Option[Boolean])
GET     /api-v3/items/:id                        controllers.AnnotatedThingController.getAnnotatedThing(id: String, prettyPrint: Option[Boolean])
GET     /api-v3/items/:id/places                 controllers.AnnotatedThingController.listPlaces(id: String, prettyPrint: Option[Boolean])
GET     /api-v3/items/:id/annotations            controllers.AnnotatedThingController.listAnnotations(id: String, prettyPrint: Option[Boolean])

GET     /api-v3/annotations                      controllers.AnnotationController.listAll(prettyPrint: Option[Boolean])
GET     /api-v3/annotations/:id                  controllers.AnnotationController.getAnnotation(id: java.util.UUID, prettyPrint: Option[Boolean])

GET     /api-v3/places                           controllers.PlaceController.listAll(prettyPrint: Option[Boolean])
GET     /api-v3/places/:uri                      controllers.PlaceController.getPlace(uri: String, prettyPrint: Option[Boolean])

# HTML view routes
GET     /api-v3/pages/datasets/:id               controllers.pages.DatasetPagesController.getDataset(id: String)

# Auth
GET     /api-v3/login                            controllers.admin.AuthController.login
POST    /api-v3/login                            controllers.admin.AuthController.authenticate
GET     /api-v3/logout                           controllers.admin.AuthController.logout

# Admin
GET     /api-v3/admin/datasets                   controllers.admin.DatasetAdminController.index
POST    /api-v3/admin/datasets                   controllers.admin.DatasetAdminController.uploadDataset
DELETE  /api-v3/admin/datasets/:id               controllers.admin.DatasetAdminController.deleteDataset(id: String)
POST    /api-v3/admin/datasets/:id/annotations   controllers.admin.DatasetAdminController.uploadAnnotations(id: String)

# Experimental features
GET     /api-v3/labs/heatmap                     controllers.labs.Heatmap.index(dataset: Option[String], item: Option[String])
